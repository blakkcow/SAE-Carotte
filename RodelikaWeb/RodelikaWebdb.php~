<?php
// main.php
include 'db.php'; // En supposant que votre code de connexion à la base de données est dans db.php

print_hello_message();

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $choice = $_POST['choice'];
    
    switch ($choice) {
        case 1:
            get_list_student();
            break;
        case 2:
            get_list_student_with_sold();
            break;
        case 3:
            new_student();
            break;
        case 4:
            add_bonus();
            break;
        case 5:
            echo "Au revoir !";
            break;
        default:
            echo "Numéro invalide. Veuillez entrer 1, 2, 3, 4 ou 5";
    }
}
?>

<form method="post">
    <label for="choice">Quel est votre choix ? :</label>
    <input type="number" name="choice" required>
    <button type="submit">Soumettre</button>
</form>
